<UserControl x:Class="JTTT.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:viewModels="clr-namespace:JTTT.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" >

    <UserControl.DataContext>
        <viewModels:MailSenderViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="3.5" />
            <Setter Property="Width" Value="90" />
            <Setter Property="Height" Value="30" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="{x:Type Label}">
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinWidth" Value="90" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
  
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label  
            Grid.Row="0"
            Content="Jeżeli"
            FontSize="22"
            HorizontalAlignment="Center"
        />
        <Label 
            Grid.Row="1"
            Content="to:"
            FontSize="22"
            HorizontalAlignment="Left"
        />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label  
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="na danej stronie znajduje się obrazek, który zawiera tekst"
                HorizontalAlignment="Left"
            />
            <Label 
                Grid.Row="1"
                Grid.Column="0"
                Content="URL:"
            />
            <Label 
                Grid.Row="2"
                Grid.Column="0"
                Content="Tekst:"
            />
            <TextBox 
                Grid.Row="1"
                Grid.Column="1"
                BorderThickness="2"
                Text="{Binding Path=Url, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Grid.IsSharedSizeScope="True"
            />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                BorderThickness="2"
                Text="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,3"
            />
        </Grid>

        <Label 
            Grid.Row="3"
            Content="to wykonaj to:"
            FontSize="22"
            HorizontalAlignment="Left"
        />

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label  
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="wyślij na podany adres email wiadmość ze znalezionym obrazkiem"
                HorizontalAlignment="Left"
            />
            <Label 
                Grid.Row="1"
                Grid.Column="0"
                Content="e-mail:"
            />
            <TextBox 
                Grid.Row="1"
                Grid.Column="1"
                BorderThickness="2"
                Text="{Binding Path=Email, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True, NotifyOnValidationError=True, ValidatesOnExceptions=True}" 
                HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Grid.IsSharedSizeScope="True" Margin="39,5,7,1"
            />
        </Grid>
        <Button
            Grid.Row="5"
            Content="Wykonaj"
            Command="{Binding SendCommand}">
        </Button>
    </Grid>
</UserControl>
